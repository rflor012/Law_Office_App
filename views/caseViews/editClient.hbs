<div class="text-center">
<div class="card mx-auto">
  <div class="card-header card-styling text-white">
    <h2 class="text-center">{{theCase.name}} {{theCase.lastName}}</h2>
    <h4 class="text-center">Edit this Client</h2>
  </div>
  <ul class="list-group list-group-flush text-center">
    <form action="/client/{{theCase._id}}/update" method="post">
      <li class="list-group-item">
        <label>Name: </label>
        <input type="text" name="name" value="{{theCase.name}}" />
      </li>
      <li class="list-group-item">
        <label>Last Name: </label>
        <input type="text" name="lastName" value="{{theCase.lastName}}" />
      </li>
      <li class="list-group-item">
        <label>DOB: </label>
        <input type="text" name="dateOfBirth" value="{{theCase.dateOfBirth}}" />
      </li>
      <li class="list-group-item">
        <label>Case Number: </label>
        <input type="text" name="caseNumber" value="{{theCase.caseNumber}}" />
      </li>
      <li class="list-group-item">
        <label>Case Type: </label>
        <input type="text" name="caseType" value="{{theCase.caseType}}" />
      </li>
      <li class="list-group-item">
        <label>Phone Number: </label>
        <input type="text" name="phoneNumber" value="{{theCase.phoneNumber}}" />
      </li>
      <li class="list-group-item">
        <label>Address: </label>
        <input type="text" name="address" value="{{theCase.address}}" />
      </li>
      <li class="list-group-item">
        <label>Payment: </label>
        <input type="text" name="payment" value="{{theCase.payment}}" />
      </li>
      <button class="edit-button" type="submit">Save Changes</button>
    </form>
    <form action="/client/{{theCase._id}}/delete" method="post">
      <button class="edit-button" type='submit'>Delete this Client</button>
    </form>
    </div>
    </div>
