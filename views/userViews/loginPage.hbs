<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="text-center">
        <h1>Employee Login</h1>
        <img src="images/logojlf.jpg"/>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active peopleCarouselImg">
              <img class="d-block w-100" src="images/cesar_chavez.jpg" alt="First slide">
            </div>
            <div class="carousel-item peopleCarouselImg">
              <img class="d-block w-100" src="images/login-hero.jpeg" alt="Second slide">
            </div>
            <div class="carousel-item peopleCarouselImg">
              <img class="d-block w-100" src="images/activism.jpg" alt="Third slide">
            </div>
            <div class="carousel-item peopleCarouselImg">
              <img class="d-block w-100" src="images/campesinos.jpg" alt="Fourth Slide" />
            </div>
            <div class="carousel-item peopleCarouselImg">
              <img class="d-block w-100" src="images/miamiImmCourt.jpeg" alt="Fifth Slide" />
            </div>
            <div class="carousel-item peopleCarouselImg">
              <img class="d-block w-100" src="images/guatemaltecos.jpg" alt="Sixth Slide" />
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <form action="/login" method="post">
          <label>Username:</label>
          <input type='text' name="username" />

          <label>Password:</label>
          <input type="password" name="password"/>

          <button class="edit-button">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>


<div class="mx-auto bg-danger text-white">
  {{#if errorMessage}}
  <div class="mx-auto">{{errorMessage}}</div>
  {{/if}}
</div>
